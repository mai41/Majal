@model IEnumerable<Majal.Models.course>

@{
                /**/

                ViewBag.Title = "Courses";
}


<fieldset>
    <legend>Courses</legend>
    <br />
    @using (Html.BeginForm("getCourses", "course", FormMethod.Get))
    {
        <b>Search Option: </b>@Html.RadioButton("option", "Course Name")<text>Course Name</text>
        @Html.RadioButton("option", "Instuctor ID")<text>Instuctor ID</text>
        @Html.RadioButton("option", "Day Of Course")<text>Day Of Course</text>
        @Html.TextBox("search")
        <input type="submit" name="submit" value="Search" />
    }
    <br />
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <th>@Html.DisplayNameFor(a => a.course_id)</th>
            <th>@Html.DisplayNameFor(a => a.couse_name)</th>
            <th>@Html.DisplayNameFor(a => a.Instructor)</th>
            <th>@Html.DisplayNameFor(a => a.Day)</th>
            <th>@Html.DisplayNameFor(a => a.StartSlot)</th>
            <th>@Html.DisplayNameFor(a => a.EndSlot)</th>
            <th>@Html.DisplayNameFor(a => a.startsFrom)</th>
            <th>@Html.DisplayNameFor(a => a.Duration)</th>
            <th>@Html.DisplayNameFor(a => a.hallNo)</th>
            <th>@Html.DisplayNameFor(a => a.Capacity)</th>
            <th>Edit Course</th>
            <th>Delete Course</th>
        </tr>

        @foreach (Majal.Models.course cr in Model)
        {
            <tr>
                <td>@Html.DisplayFor(a => cr.course_id)</td>
                <td>@Html.DisplayFor(a => cr.couse_name)</td>
                <td>@Html.DisplayFor(a => cr.Instructor)</td>
                <td>@Html.DisplayFor(a => cr.Day)</td>
                <td>@Html.DisplayFor(a => cr.StartSlot)</td>
                <td>@Html.DisplayFor(a => cr.EndSlot)</td>
                <td>@Html.DisplayFor(a => cr.startsFrom)</td>
                <td>@Html.DisplayFor(a => cr.Duration)</td>
                <td>@Html.DisplayFor(a => cr.hallNo)</td>
                <td>@Html.DisplayFor(a => cr.Capacity)</td>
                <td>@Html.ActionLink("Edit", "editCourse", new { course_id = cr.course_id })</td>
                <td>@Html.ActionLink("Delete", "deleteCourse", new { course_id = cr.course_id })</td>
            </tr>
        }

    </table>
    <div>@Html.ActionLink("Add Course", "addCourse")</div><br />
    <div>
        <input type="button" value="Back To DashBoard" onclick="window.location= '@Url.Action( "AdminDashBoard", "admin")'" />
    </div>

</fieldset>

<br /><div>
    @Html.ActionLink("Log out", "login", "admin")
</div>
