@model Majal.Models.Admin

@{
    ViewBag.Title = "EditAdmin";
}

<fieldset>
    <legend>Edit</legend>
    <form method="post" action="" novalidate="novalidate">
        <div class="form-group">
            @Html.DisplayNameFor(a => a.admin_name)<br />
            @Html.EditorFor(a => a.admin_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.admin_name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(a => a.password)<br />
            @Html.EditorFor(a => a.password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(a => a.email)<br />
            @Html.EditorFor(a => a.email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(a => a.phoneNo)<br />
            @Html.EditorFor(a => a.phoneNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.phoneNo, "", new { @class = "text-danger" })
        </div>
        <div>
            <input type="submit" value="Edit" />
        </div>
    </form>
</fieldset>
<br />
<div>
    <input type="button" value="Back To DashBoard" onclick="window.location= '@Url.Action( "AdminDashBoard", "admin")'" />
</div>
